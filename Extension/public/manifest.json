{
  "manifest_version": 3,
  "name": "Collectify - Side Panel",
  "version": "1.0",
  "description": "A Chrome extension side panel named Collectify.",
  "permissions": [
    "sidePanel",
    "cookies",
    "activeTab",
    "notifications"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "action": {
    "default_title": "Collectify Panel"
  },
  "side_panel": {
    "default_path": "index.html"
  },
  "host_permissions": ["<all_urls>"]
}
